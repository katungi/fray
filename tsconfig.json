{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "noEmit": false,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}